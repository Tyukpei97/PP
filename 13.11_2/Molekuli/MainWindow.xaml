<Window x:Class="Molekuli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Molekuli"
        mc:Ignorable="d"
        Title="Molecular Dynamics Simulator" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF1A0B2B">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3A1B5F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF6B4B8C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A2B7C"/>
                    <Setter Property="BorderBrush" Value="#FF8C6BAD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF2A0B4C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E6FFFFFF"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="8,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- TextBlock Style -->
        <Style x:Key="InfoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6FFFFFF"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#26FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF6B4B8C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <!-- HUD Panel Style -->
        <Style x:Key="HUDPanel" TargetType="Border">
            <Setter Property="Background" Value="#803A1B5F"/>
            <Setter Property="BorderBrush" Value="#FF6B4B8C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Enhanced Vertical Control Panel -->
            <Border Grid.Column="0" Background="#FF2A0B4C" BorderBrush="#FF4A2B7C" BorderThickness="0,0,1,0" Width="140">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10" Orientation="Vertical">

                        <!-- Header -->
                        <Border Background="#803A1B5F" CornerRadius="6" Padding="8,6" Margin="0,0,0,10">
                            <TextBlock Text="CONTROLS" Foreground="White" FontSize="12" FontWeight="Bold" 
                                      HorizontalAlignment="Center" FontFamily="Segoe UI"/>
                        </Border>

                        <!-- Control Buttons -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                            <Button x:Name="btnStart" Content="🚀 START" Style="{StaticResource ModernButton}" 
                                   Click="BtnStart_Click" FontSize="10"/>
                            <Button x:Name="btnPause" Content="⏸ PAUSE" Style="{StaticResource ModernButton}" 
                                   Click="BtnPause_Click" FontSize="10"/>
                            <Button x:Name="btnReset" Content="🔄 RESET" Style="{StaticResource ModernButton}" 
                                   Click="BtnReset_Click" FontSize="10"/>
                        </StackPanel>

                        <!-- Simulation Parameters -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                            <Border Style="{StaticResource HUDPanel}" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="PARTICLE COUNT" Style="{StaticResource InfoText}" FontWeight="Bold"/>
                                    <TextBox x:Name="txtParticleCount" Text="50" Style="{StaticResource ModernTextBox}" 
                                            HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource HUDPanel}" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="TEMPERATURE" Style="{StaticResource InfoText}" FontWeight="Bold"/>
                                    <Slider x:Name="sliderTemperature" Minimum="0" Maximum="100" Value="30" 
                                           Style="{StaticResource ModernSlider}" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding Value, ElementName=sliderTemperature, StringFormat={}{0:F0}°}" 
                                              Style="{StaticResource InfoText}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource HUDPanel}">
                                <StackPanel>
                                    <TextBlock Text="GRAVITY" Style="{StaticResource InfoText}" FontWeight="Bold"/>
                                    <Slider x:Name="sliderGravity" Minimum="0" Maximum="20" Value="5" 
                                           Style="{StaticResource ModernSlider}" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding Value, ElementName=sliderGravity, StringFormat={}{0:F1}g}" 
                                              Style="{StaticResource InfoText}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Toggles -->
                        <Border Style="{StaticResource HUDPanel}">
                            <StackPanel>
                                <TextBlock Text="PHYSICS MODE" Style="{StaticResource InfoText}" FontWeight="Bold" Margin="0,0,0,4"/>
                                <CheckBox x:Name="chkCollisions" Content="Collisions" IsChecked="True" Style="{StaticResource ModernCheckBox}"/>
                                <CheckBox x:Name="chkForces" Content="Forces" IsChecked="True" Style="{StaticResource ModernCheckBox}"/>
                            </StackPanel>
                        </Border>

                        <!-- Info Footer -->
                        <Border Background="#803A1B5F" CornerRadius="6" Padding="6" Margin="0,15,0,0">
                            <TextBlock Text="Click canvas to add particles" Style="{StaticResource InfoText}" 
                                      TextAlignment="Center" FontStyle="Italic" FontSize="9"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Enhanced Simulation Canvas -->
            <Border Grid.Column="1" BorderBrush="#FF4A2B7C" BorderThickness="1" Margin="10" Background="#0F051F" CornerRadius="2">
                <Canvas x:Name="simulationCanvas" MouseDown="SimulationCanvas_MouseDown">
                    <!-- Subtle Gradient Overlay -->
                    <Rectangle x:Name="overlayRect" Opacity="0.02">
                        <Rectangle.Fill>
                            <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="1" RadiusY="1">
                                <GradientStop Color="#FF9B6BCC" Offset="0"/>
                                <GradientStop Color="#FF6B4B8C" Offset="0.5"/>
                                <GradientStop Color="#FF3A1B5F" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </Canvas>
            </Border>
        </Grid>

        <!-- Enhanced HUD Status Bar -->
        <Border Grid.Row="1" Background="#802A0B4C" BorderBrush="#FF4A2B7C" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left HUD Cluster -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,5">
                    <Border Style="{StaticResource HUDPanel}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔴" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock x:Name="txtParticleInfo" Text="Particles: 0" Style="{StaticResource InfoText}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HUDPanel}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock x:Name="txtEnergyInfo" Text="Energy: 0" Style="{StaticResource InfoText}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Center System Status -->
                <Border Grid.Column="1" Style="{StaticResource HUDPanel}" Margin="0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛰️ MOLECULAR DYNAMICS ACTIVE" Style="{StaticResource InfoText}" 
                                  FontWeight="Bold" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Right HUD Cluster -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,5">
                    <Border Style="{StaticResource HUDPanel}" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock x:Name="txtSpeedInfo" Text="Avg Speed: 0" Style="{StaticResource InfoText}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource HUDPanel}" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock x:Name="txtFPSInfo" Text="FPS: 0" Style="{StaticResource InfoText}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>