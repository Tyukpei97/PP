<UserControl x:Class="Battleship.UI.Views.PlacementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Battleship.UI.ViewModels"
             xmlns:core="clr-namespace:Battleship.Core.Models;assembly=Battleship.Core"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CellButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#1f2937"/>
            <Setter Property="Background" Value="#e5e7eb"/>
            <Setter Property="ToolTip" Value="Поставить корабль"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding State}" Value="{x:Static core:CellState.Ship}">
                    <Setter Property="Background" Value="#a5b4fc"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State}" Value="{x:Static core:CellState.Hit}">
                    <Setter Property="Background" Value="#f97316"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State}" Value="{x:Static core:CellState.Sunk}">
                    <Setter Property="Background" Value="#b91c1c"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding State}" Value="{x:Static core:CellState.Miss}">
                    <Setter Property="Background" Value="#cbd5e1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0b1021" Margin="0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#111827" Padding="16" CornerRadius="12" BorderBrush="#1f2937" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Размещение кораблей" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                <ItemsControl ItemsSource="{Binding OwnBoard.Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="10" Columns="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:BoardCellViewModel}">
                            <Button Style="{StaticResource CellButtonStyle}"
                                    Command="{Binding ClickCommand}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="{Binding Status}" Foreground="#bfdbfe" TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <Border Background="#111827" Padding="12" CornerRadius="8" BorderBrush="#1f2937" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Настройки" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="Длина:" Foreground="#cbd5e1" Margin="0,0,6,0"/>
                        <ComboBox Width="120" SelectedValue="{Binding SelectedLength, Mode=TwoWay}" SelectedValuePath="Tag" Margin="0,0,8,0">
                            <ComboBoxItem Content="4" Tag="4" />
                            <ComboBoxItem Content="3" Tag="3" />
                            <ComboBoxItem Content="2" Tag="2" />
                            <ComboBoxItem Content="1" Tag="1" />
                        </ComboBox>
                        <CheckBox Content="Горизонтально" IsChecked="{Binding IsHorizontal}" Foreground="#cbd5e1"/>
                    </StackPanel>
                    <TextBlock Text="{Binding FleetInfo}" Foreground="#cbd5e1" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Сбросить"
                                Command="{Binding ResetCommand}"
                                Padding="10,6"
                                Background="#334155"
                                Foreground="White"
                                Margin="0,0,6,0"/>
                        <Button Content="Готово"
                                Command="{Binding ReadyCommand}"
                                Padding="10,6"
                                Background="#22c55e"
                                Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
