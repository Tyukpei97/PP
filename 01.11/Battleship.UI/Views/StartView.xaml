<UserControl x:Class="Battleship.UI.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Background="#0f172a">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Морской бой — локальная сеть"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="20,10"/>

        <Border Grid.Row="1"
                Margin="20"
                Background="#16213e"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#3a506b"
                BorderThickness="1">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Старт" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Имя" Foreground="#c7d2fe" FontSize="12"/>
                    <TextBox Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="8" />
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="IP адрес сервера (для клиента)" Foreground="#c7d2fe" FontSize="12"/>
                    <TextBox Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="8"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Порт" Foreground="#c7d2fe" FontSize="12"/>
                    <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Создать сервер"
                            Command="{Binding StartHostCommand}"
                            Background="#22c55e"
                            Foreground="White"
                            Padding="12,8"
                            FontWeight="SemiBold"
                            Width="150"
                            Margin="0,0,10,0"/>
                    <Button Content="Подключиться"
                            Command="{Binding StartClientCommand}"
                            Background="#38bdf8"
                            Foreground="White"
                            Padding="12,8"
                            FontWeight="SemiBold"
                            Width="150"/>
                </StackPanel>

                <TextBlock Text="{Binding Status}" Foreground="#e0f2fe" FontSize="13" TextWrapping="Wrap" Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
