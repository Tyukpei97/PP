<Window x:Class="NfaVisualDebugger.UI.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить значение" Height="160" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите значение" Margin="0,0,0,8" />
        <TextBox x:Name="InputBox" Grid.Row="1" Height="28" Padding="6" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Отмена" Width="90" Margin="0,0,8,0" Click="OnCancel"/>
            <Button Content="Сохранить" Width="90" IsDefault="True" Click="OnOk"/>
        </StackPanel>
    </Grid>
</Window>
