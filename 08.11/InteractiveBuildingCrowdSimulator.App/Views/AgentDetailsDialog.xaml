<Window x:Class="InteractiveBuildingCrowdSimulator.App.Views.AgentDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные агента" Height="260" Width="320"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A" Foreground="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Подробности агента" FontSize="18" FontWeight="Bold" />

        <StackPanel Grid.Row="1" Margin="0 8 0 8">
            <TextBlock Text="{Binding Agent.Id, StringFormat=ID: {0}}" />
            <TextBlock Text="{Binding Agent.State, StringFormat=Состояние: {0}}" />
            <TextBlock Text="{Binding Agent.Position.X, StringFormat=X: {0:0.00}}" />
            <TextBlock Text="{Binding Agent.Position.Y, StringFormat=Y: {0:0.00}}" />
        </StackPanel>

        <Button Grid.Row="2" Content="Закрыть" HorizontalAlignment="Right" Width="90" Click="Close_Click" />
    </Grid>
</Window>
