<Window x:Class="Clasters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quantum Cluster Vision" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Window.Resources>
        <!-- Цветовая палитра -->
        <SolidColorBrush x:Key="PrimaryPurpleBrush" Color="#8A2BE2"/>
        <SolidColorBrush x:Key="LightPurpleBrush" Color="#E6E6FA"/>
        <SolidColorBrush x:Key="DarkPurpleBrush" Color="#4B0082"/>
        <SolidColorBrush x:Key="AccentPinkBrush" Color="#FF69B4"/>
        <SolidColorBrush x:Key="BackgroundWhiteBrush" Color="#FFF5FF"/>

        <!-- Кисти -->
        <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF5FF" Offset="0"/>
            <GradientStop Color="#E6E6FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="NodeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#E6E6FA" Offset="0.7"/>
            <GradientStop Color="#8A2BE2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#8A2BE2" Offset="0"/>
            <GradientStop Color="#4B0082" Offset="1"/>
        </LinearGradientBrush>

        <!-- Стили -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#8A2BE2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GlassPanel" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CCFFFFFF" Offset="0"/>
                        <GradientStop Color="#99E6E6FA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#80FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="#8A2BE2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для панелей статистики -->
        <Style x:Key="StatPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource MainBackground}" CornerRadius="15">
        <Grid>
            <!-- Заголовок окна -->
            <Border Height="40" Background="Transparent" 
                    VerticalAlignment="Top" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="QUANTUM CLUSTER VISION" 
                               Foreground="{StaticResource PrimaryPurpleBrush}"
                               FontSize="16" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="─" Width="30" Height="30" 
                                Style="{StaticResource ModernButton}" 
                                Background="Transparent"
                                Click="MinimizeButton_Click"/>
                        <Button Content="✕" Width="30" Height="30" 
                                Style="{StaticResource ModernButton}" 
                                Background="Transparent"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Margin="10,40,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя панель управления -->
                <Border Grid.Row="0" Style="{StaticResource GlassPanel}" Margin="0,0,0,10" Padding="15">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="🌌 ADD NODE" Style="{StaticResource ModernButton}" Click="AddNode_Click"/>
                        <Button Content="🗑️ REMOVE" Style="{StaticResource ModernButton}" Click="RemoveNode_Click"/>
                        <Button Content="⚡ START" Style="{StaticResource ModernButton}" Click="StartSimulation_Click"/>
                        <Button Content="⏹️ STOP" Style="{StaticResource ModernButton}" Click="StopSimulation_Click"/>
                        <Button Content="🌀 CLEAR" Style="{StaticResource ModernButton}" Click="ClearAll_Click"/>

                        <Separator Margin="20,0" Background="{StaticResource PrimaryPurpleBrush}" Width="2"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="SIMULATION SPEED:" 
                                       Foreground="{StaticResource PrimaryPurpleBrush}"
                                       FontWeight="Bold" Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <Slider x:Name="SimulationSpeedSlider" 
                                    Minimum="1" Maximum="10" Value="5" 
                                    Width="150" Height="20"
                                    ValueChanged="SimulationSpeed_Changed">
                                <Slider.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#E6E6FA" Offset="0"/>
                                        <GradientStop Color="#8A2BE2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Slider.Background>
                            </Slider>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Основная область визуализации -->
                <Border Grid.Row="1" Style="{StaticResource GlassPanel}" Margin="0,0,0,10">
                    <Canvas x:Name="MainCanvas" Background="Transparent"
                            MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                            MouseMove="Canvas_MouseMove"
                            MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
                        <!-- Узлы и соединения будут добавляться динамически -->
                    </Canvas>
                </Border>

                <!-- Нижняя панель статистики -->
                <Border Grid.Row="2" Style="{StaticResource GlassPanel}" Padding="15">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Активные узлы -->
                        <StackPanel Style="{StaticResource StatPanelStyle}">
                            <TextBlock Text="🔵" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="ACTIVE NODES" FontSize="10" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryPurpleBrush}"/>
                                <TextBlock x:Name="ActiveNodesText" Text="0" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource DarkPurpleBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Неактивные узлы -->
                        <StackPanel Style="{StaticResource StatPanelStyle}">
                            <TextBlock Text="🔴" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="FAILED NODES" FontSize="10" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryPurpleBrush}"/>
                                <TextBlock x:Name="FailedNodesText" Text="0" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource DarkPurpleBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Производительность -->
                        <StackPanel Style="{StaticResource StatPanelStyle}">
                            <TextBlock Text="🚀" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="PERFORMANCE" FontSize="10" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryPurpleBrush}"/>
                                <TextBlock x:Name="TotalPerformanceText" Text="0" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource DarkPurpleBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Сетевая нагрузка -->
                        <StackPanel Style="{StaticResource StatPanelStyle}">
                            <TextBlock Text="📡" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="NETWORK LOAD" FontSize="10" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryPurpleBrush}"/>
                                <TextBlock x:Name="NetworkLoadText" Text="0%" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource DarkPurpleBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Задачи -->
                        <StackPanel Style="{StaticResource StatPanelStyle}">
                            <TextBlock Text="✅" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="TASKS" FontSize="10" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryPurpleBrush}"/>
                                <TextBlock x:Name="TasksCompletedText" Text="0" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource DarkPurpleBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Время работы -->
                        <StackPanel Style="{StaticResource StatPanelStyle}">
                            <TextBlock Text="🕒" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="UPTIME" FontSize="10" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryPurpleBrush}"/>
                                <TextBlock x:Name="UptimeText" Text="00:00" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource DarkPurpleBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Анимированный фон -->
            <Canvas x:Name="BackgroundCanvas" Background="Transparent" IsHitTestVisible="False">
                <!-- Анимированные частицы фона -->
            </Canvas>
        </Grid>
    </Border>
</Window>